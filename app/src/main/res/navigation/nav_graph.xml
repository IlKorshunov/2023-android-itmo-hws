<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/start_fragment">

    <fragment
        android:id="@+id/start_fragment"
        android:name="ru.ok.itmo.example.StartFragment"
        tools:layout="@layout/start_fragment">
        <action
            android:id="@+id/action_start_fragment_to_fragment_enter"
            app:destination="@id/fragment_enter" />
    </fragment>

    <fragment
        android:id="@+id/fragment_enter"
        android:name="ru.ok.itmo.example.enter.LogInFragment"
        tools:layout="@layout/fragment_enter">

        <action
            android:id="@+id/action_fragment_enter_to_fragment_chat"
            app:destination="@id/fragment_chat"/>
    </fragment>


    <fragment
        android:id="@+id/fragment_chat"
        android:name="ru.ok.itmo.example.chat.ChatFragment"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="token"
            app:argType="string" />

    </fragment>
</navigation>