<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/application_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/applicationthemeButton"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blackButton"
        android:visibility="gone"
        android:layout_below="@+id/application_theme"
    />

    <Button
        android:id="@+id/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whiteButton"
        android:visibility="gone"
        android:layout_below="@+id/Black"
    />

    <Button
        android:id="@+id/Translator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modeTranslator"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/English"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/englishButton"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Translator" />

    <Button
        android:id="@+id/Arabian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arabianButton"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/English" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inputEmail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/application_theme"
        android:layout_marginTop="200dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inputPassword"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Email"
        android:layout_marginTop="16dp"
        android:inputType="textPassword" />

    <ToggleButton
        android:id="@+id/togglePasswordVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/show"
        android:textOn="@string/hide"
        android:layout_alignBottom="@id/Password"
        android:layout_alignEnd="@id/Password"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginButton"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
